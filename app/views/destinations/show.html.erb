<p id="notice"><%= notice %></p>

<p>
  <strong>City:</strong>
  <%= @destination.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @destination.country %>
</p>
<h1><%= @destination.address%></h1>
<p><%= @destination.latitude %>,<%= @destination.longitude %></p>

<p>
  <strong>Description:</strong>
  <%= @destination.description %>
</p>


<p>
	<%#= image_tag @destination.avatar.url %>
	<%= image_tag @destination.avatar.url(:medium) %>
	<%= image_tag @destination.avatar.url(:thumb) %>
</p>

<p>
	<%= link_to 'Edit', edit_destination_path(@destination), class: "btn btn-warning" %> |
	<%= link_to 'Back', destinations_path, class: "btn btn-primary" %>
</p>


 <div id="destination-map"></div>

 <%= javascript_tag do %>
   latitude = '<%= j @destination.latitude.to_s %>';
   longitude = '<%= j @destination.longitude.to_s %>';
   address = '<%= j @destination.address %>';
   description = '<%= j @destination.description %>';
<% end %>

