<style>
	body {
		background: <%= @color %>;
	}
</style>

<h1>About Me</h1>
<p>Lots of interesting stuffs.</p>
<p>My favorite color is <%= @color %></p>
<p>My shoes size is <%= @size %></p>

<% if @size > 10 %>
	<p>I have huge feet!</p>
<% end %>

<%= link_to "Blue", about_path(color: "blue"), class: "btn btn-primary" %> 
<%= link_to "Red", about_path(color: "red"), class: "btn btn-danger" %>
<%= link_to "Yellow", about_path(color: "yellow"), class: "btn btn-warning" %>
<%= link_to "Green", about_path(color: "green"), class: "btn btn-success" %>
<%= link_to "Cyan", about_path(color: "cyan"), class: "btn btn-info" %>
